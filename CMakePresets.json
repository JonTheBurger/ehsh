{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "debug",
      "inherits": "default",
      "displayName": "Debug",
      "description": "Debug build with default compilers",
      "installDir": "${sourceDir}/build/${presetName}/install",
      "generator": "Ninja"
    },
    {
      "name": "release",
      "inherits": "default",
      "displayName": "Release",
      "description": "Release build with default compilers",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel"
      }
    },
    {
      "name": "msvc",
      "displayName": "MSVC x64",
      "description": "Microsoft Visual C++ for x64",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "cov",
      "displayName": "Coverage",
      "description": "Debug build with Code Coverage enabled",
      "generator": "Ninja",
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Linux" ]
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "format",
      "configurePreset": "debug",
      "targets": ["format"]
    },
    {
      "name": "lint",
      "configurePreset": "debug",
      "targets": ["lint"]
    },
    {
      "name": "docs",
      "configurePreset": "debug",
      "targets": ["docs"]
    },
    {
      "name": "debug-install",
      "configurePreset": "debug",
      "targets": ["install"]
    },
    {
      "name": "install",
      "configurePreset": "release",
      "targets": ["install"]
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "error", "stopOnFailure": true }
    }
  ],
  "packagePresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "generators": [
        "TGZ"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug"
        },
        {
          "type": "test",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug-install"
        },
        {
          "type": "package",
          "name": "debug"
        }
      ]
    },
    {
      "name": "test",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug"
        },
        {
          "type": "test",
          "name": "debug"
        }
      ]
    },
    {
      "name": "format",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "format"
        }
      ]
    },
    {
      "name": "lint",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "lint"
        }
      ]
    },
    {
      "name": "docs",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "docs"
        }
      ]
    }
  ]
}
